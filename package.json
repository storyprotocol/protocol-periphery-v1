      "ethers": "^6.10.0",
      "husky": "^9.0.11",
      "mocha": "^10.2.0",
      "prettier": "^3.0.0",
      "prettier-plugin-solidity": "^1.1.3",
      "solhint": "^4.1.1",
      "solhint-plugin-prettier": "^0.1.0",
      "solidity-coverage": "^0.8.6",
      "ts-node": "^10.9.2",
